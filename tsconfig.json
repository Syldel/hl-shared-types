{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.mjs",
    ".prettierrc"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".idea",
    "**/*.spec.ts"
  ]
}
